---
const menuItems = [
  { label: "Home", href: "/" },
  { label: "Serviços", href: "/servicos" },
  { label: "Sobre", href: "/sobre" },
  { label: "Avaliações", href: "/avaliacoes" },
  { label: "Contato", href: "/contato" },
];
---

<header class="bg-background/90 backdrop-blur-md sticky top-0 z-50 shadow-sm border-b border-gray-100">
  <div class="container mx-auto px-4 md:px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 group">
        <!-- Assuming logo exists, otherwise fallback to text -->
       <img src="/img/logo-pointdog.png" alt="Point Dog Pet Shop" class="h-10 w-auto transition-transform group-hover:scale-105" />
       <!-- Fallback text if logo is small/unclear -->
       <span class="sr-only">Point Dog Pet Shop</span>
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-8">
      {menuItems.map(item => (
        <a 
          href={item.href} 
          class="text-text-main font-medium hover:text-primary transition-colors hover:underline underline-offset-4 decoration-2 decoration-accent"
        >
          {item.label}
        </a>
      ))}
    </nav>

    <!-- Desktop CTA -->
    <div class="hidden md:block">
      <a 
        href="https://wa.me/5531999999999" 
        target="_blank" 
        class="bg-primary hover:bg-green-800 text-white font-semibold py-2 px-6 rounded-full transition-all hover:shadow-lg flex items-center gap-2"
      >
        <span>Agendar Agora</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-message-circle"><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/></svg>
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden text-text-main p-2 focus:outline-none" aria-label="Abrir menu">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="menu-icon"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-full left-0 w-full bg-background border-b border-gray-100 shadow-md">
    <nav class="flex flex-col p-4 gap-4">
      {menuItems.map(item => (
        <a 
          href={item.href} 
          class="text-text-main font-medium text-lg border-b border-gray-50 pb-2 hover:text-primary"
        >
          {item.label}
        </a>
      ))}
      <a 
        href="https://wa.me/5531999999999" 
        target="_blank" 
        class="bg-primary text-center text-white font-semibold py-3 px-6 rounded-lg mt-2 flex justify-center items-center gap-2"
      >
        Agendar pelo WhatsApp
      </a>
    </nav>
  </div>
</header>

<script>
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    // Simple aria-expanded toggle could be added here
  });
</script>
