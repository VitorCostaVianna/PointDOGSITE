---
const testimonials = [
  {
    name: "Ana Clara",
    rating: 5,
    text: "Atendimento impecável! Meu cachorro é super medroso e foi tratado com muito carinho. O vídeo do banho me deixou super tranquila.",
    date: "Há 2 semanas"
  },
  {
    name: "Ricardo Mendes",
    rating: 5,
    text: "Melhor pet shop do bairro. Preço justo, entrega grátis e a tosa ficou perfeita. Recomendo demais!",
    date: "Há 1 mês"
  },
  {
    name: "Fernanda Costa",
    rating: 5,
    text: "A clínica veterinária é excelente. Dra. Juliana foi muito atenciosa com minha gatinha. Confiança total.",
    date: "Há 3 dias"
  },
   {
    name: "Carlos Eduardo",
    rating: 5,
    text: "Produtos de qualidade e atendimento excepcional. Sempre comprei a ração aqui e a entrega é super rápida.",
    date: "Há 1 mês"
  }
];
---

<section id="avaliacoes" class="py-20 bg-background text-center">
  <div class="container mx-auto px-4 md:px-6">
    <h2 class="text-4xl font-serif font-bold text-primary mb-2">Quem ama, recomenda</h2>
    <div class="flex items-center justify-center gap-2 mb-12">
        <span class="text-yellow-400 text-2xl">★★★★★</span>
        <span class="text-gray-600 font-medium">4.8 de 5 no Google</span>
    </div>

    <!-- Scrollable container for mobile, Grid for desktop -->
    <div class="flex overflow-x-auto md:grid md:grid-cols-2 lg:grid-cols-4 gap-6 pb-8 md:pb-0 px-2 md:px-0 snap-x snap-mandatory scrollbar-hide">
      
      {testimonials.map((review) => (
        <div class="min-w-[85vw] md:min-w-0 bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex flex-col text-left snap-center hover:shadow-md transition-shadow">
          <div class="flex items-center gap-1 text-yellow-400 mb-4 text-sm">
            {"★".repeat(review.rating)}
          </div>
          <p class="text-gray-700 italic mb-6 flex-grow">"{review.text}"</p>
          <div class="mt-auto">
            <p class="font-bold text-primary">{review.name}</p>
            <p class="text-xs text-gray-400">{review.date}</p>
          </div>
        </div>
      ))}

    </div>
    
    <div class="mt-10">
        <a href="https://g.page/pointdog" target="_blank" rel="noopener noreferrer" class="text-primary font-medium hover:underline">
            Ver todas as 532 avaliações no Google &rarr;
        </a>
    </div>

  </div>
</section>

<style>
/* Hide scrollbar for Chrome, Safari and Opera */
.scrollbar-hide::-webkit-scrollbar {
    display: none;
}
/* Hide scrollbar for IE, Edge and Firefox */
.scrollbar-hide {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
}
</style>
