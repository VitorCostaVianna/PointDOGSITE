---
import BaseLayout from '../layouts/BaseLayout.astro';
import Location from '../components/Location.astro';

// Expanded list of testimonials
const reviews = [
  {
    name: "Ana Clara",
    rating: 5,
    text: "Atendimento impecável! Meu cachorro é super medroso e foi tratado com muito carinho. O vídeo do banho me deixou super tranquila.",
    date: "Há 2 semanas"
  },
  {
    name: "Ricardo Mendes",
    rating: 5,
    text: "Melhor pet shop do bairro. Preço justo, entrega grátis e a tosa ficou perfeita. Recomendo demais!",
    date: "Há 1 mês"
  },
  {
    name: "Fernanda Costa",
    rating: 5,
    text: "A clínica veterinária é excelente. Dra. Juliana foi muito atenciosa com minha gatinha. Confiança total.",
    date: "Há 3 dias"
  },
   {
    name: "Carlos Eduardo",
    rating: 5,
    text: "Produtos de qualidade e atendimento excepcional. Sempre comprei a ração aqui e a entrega é super rápida.",
    date: "Há 1 mês"
  },
  {
    name: "Mariana Souza",
    rating: 5,
    text: "Lugar limpo, cheiroso e organizado. Meus cães amam ir lá. O banho e tosa é nota 10.",
    date: "Há 2 meses"
  },
  {
    name: "Paulo Roberto",
    rating: 4,
    text: "Ótimo atendimento, só acho que poderia ter mais vagas no sábado de manhã, mas entendo que é concorrido.",
    date: "Há 3 meses"
  },
  {
    name: "Juliana Lima",
    rating: 5,
    text: "Veterinários muito competentes. Salvaram meu pug de uma alergia séria.",
    date: "Há 4 meses"
  }
];
---

<BaseLayout title="Avaliações | Point Dog Pet Shop" description="Veja o que nossos clientes dizem sobre nós. Mais de 500 avaliações 5 estrelas no Google.">
  
  <section class="bg-primary py-16 text-center text-white">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">O que dizem sobre nós</h1>
      <div class="flex items-center justify-center gap-2 text-xl">
        <span class="text-yellow-400 font-bold">4.8</span>
        <span class="text-yellow-400">★★★★★</span>
        <span class="text-green-100">(532 avaliações no Google)</span>
      </div>
    </div>
  </section>

  <section class="py-20 bg-background">
    <div class="container mx-auto px-4 md:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {reviews.map((review) => (
          <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 flex flex-col hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start mb-4">
               <div class="flex items-center gap-1 text-yellow-400">
                 {"★".repeat(review.rating)}
                 {"☆".repeat(5 - review.rating)}
               </div>
               <span class="text-xs text-gray-400 bg-gray-100 px-2 py-1 rounded-full">{review.date}</span>
            </div>
            
            <p class="text-gray-700 italic mb-6 flex-grow">"{review.text}"</p>
            
            <div>
              <p class="font-bold text-primary">{review.name}</p>
              <p class="text-xs text-green-600 font-medium">Cliente Verificado ✅</p>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-16 text-center">
         <p class="text-gray-600 mb-6">Quer deixar sua opinião?</p>
         <a href="https://g.page/pointdog" target="_blank" class="inline-flex items-center gap-2 text-primary font-bold hover:underline">
           Avalie no Google <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
         </a>
      </div>

    </div>
  </section>
  
  <Location />

</BaseLayout>
